<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              BindingContext="{Binding Main,Source={StaticResource Locator}}"
             x:Class="EKGADGET.Views.LoginPage">
    <ContentPage.Content>
        <ScrollView>

            <StackLayout Padding="10,20,10,5">


                <StackLayout 
                             >

                    <Image
                    Source="logotipo" 
                    WidthRequest="100" 
                    HeightRequest="100" 
                    VerticalOptions="Center" 
                    HorizontalOptions="CenterAndExpand" />
                    <Label Text="EK GADGET"
                   FontAttributes="Bold"
                   FontSize="Large"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
                </StackLayout>


                <Grid>
                    <BoxView BackgroundColor="#2c3e50"
                         CornerRadius="10"></BoxView>
                    <Grid Margin="5" >



                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="*"/>



                        </Grid.ColumnDefinitions>


                        <Image Grid.Row="0"
                       Grid.Column="0"
                       Source="usuario"
                       WidthRequest="24"/>
                        <Entry Grid.Row="1"
                       Grid.Column="0"  
                       Placeholder="usuario"
                       BackgroundColor ="#2c3e50"
                       PlaceholderColor="White"
                       HorizontalTextAlignment="Center"/>

                        <Image Grid.Row="2"
                       Grid.Column="0"
                       WidthRequest="24"
                    Source="contrasena"/>


                        <Entry 
                             Grid.Row="3"
                           Grid.Column="0"
                       IsPassword="True"
                       Placeholder="password"
                       BackgroundColor ="#2c3e50"
                       PlaceholderColor="White"
                       HorizontalTextAlignment="Center"/>









                    </Grid>



                </Grid>

                <StackLayout Orientation="Horizontal">
                    <Label HorizontalOptions="StartAndExpand"
                       Text="Rememberme in this device"
                       VerticalOptions="Center"></Label>
                    <Switch HorizontalOptions="End"></Switch>

                </StackLayout>


                <ActivityIndicator />


                <StackLayout Margin="40,0"
                             Orientation="Horizontal"
                             HorizontalOptions="CenterAndExpand">

                    <Button Text="Entrar"
                             CornerRadius="20"
                            BackgroundColor="Navy"
                            TextColor="White"/>

                </StackLayout>




            </StackLayout>

        </ScrollView>
          
       
    
    </ContentPage.Content>
</ContentPage>